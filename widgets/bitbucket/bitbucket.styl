.content
  font-size 1em
  color $gray-light

.avatar-circle
  border-radius 50%

.pull-requests
  .pull-requests-item
    overflow hidden
    display flex
    flex-direction row
    align-items center
    margin-top 5px

    .pull-requests-item-avatar
      img
        height 3em
        width auto
        background-color white

    .pull-requests-item-content
      overflow hidden
      margin-left 1em
      width 100%

      .pull-requests-item-content-ticket
        overflow hidden
        white-space nowrap
        text-overflow ellipsis

        font-size 1.5em
        font-weight bold

      .pull-requests-item-content-branch
        margin-top -0.2em
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
        display flex
        flex-direction row
        align-items center

        font-size 1em
        font-weight normal
        font-style italic
        height 1.5em

        img.pull-requests-item-content-branch-icon
          max-height 100%
          width auto
          margin 0.3em
          opacity 0.5

        .wrapper
          height 100%
          margin-left 0.3em

          img
            display block
            max-height 100%
            width auto

          img.reviewer-approved
            border 0.1em solid #36b37e

          img.reviewer-needs-work
            border 0.1em solid #ffab00


        .wrapper:first-of-type
          margin-left .7em

        .pull-requests-item-content-tasks
            flex 1
            text-align right

          span
            color crimson
            margin-left 0.2em
            font-style normal



